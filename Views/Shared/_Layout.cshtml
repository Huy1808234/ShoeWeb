    <title>Shoes Store from templatemo</title>
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <link href="~/assets/templatemo_style.css" rel="stylesheet" type="text/css" />

    <link rel="stylesheet" href="~/assets/nivo-slider.css" type="text/css" media="screen" />

    <link rel="stylesheet" type="text/css" href="~/assets/css/ddsmoothmenu.css" />
